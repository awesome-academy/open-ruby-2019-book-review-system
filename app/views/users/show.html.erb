<div class="row align-items-center my-5">
  <div class="col-lg-7">
    <%= image_tag Settings.avatar.user_profile, class: "img-fluid rounded mb-4 mb-lg-0" %>
  </div>
  <div class="col-lg-5">
    <h1 class="font-weight-light"><%= @user.name %></h1>
    <p><%= @user.email %></p>
    <p><%= t ".fact" %></p>
    <a class="btn btn-primary" href="#"><%= t ".follow" %></a>
  </div>
</div>

<div class="card text-white bg-secondary my-5 py-4 text-center">
  <div class="card-body">
    <p class="text-white m-0"><%= t ".quote_or_something" %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4 mb-5">
    <div class="card h-100">
      <div class="card-body">
        <h2 class="card-title"><%= t ".post_name" %></h2>
        <p class="card-text"><%= t ".content_post" %></p>
      </div>
      <div class="card-footer">
        <%= link_to t(".more"), "#", class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>
