<div class="row">
  <div class="col-md-8">
    <br/>
    <% if @book %>
      <% if @posts.empty? %>
        <div class="container text-center">
          <h1><%= t ".not_found_post" %></h1>
          <%= link_to t(".recomment"), "#", class: "btn btn-success" %>
        </div>
      <% else %>
        <%= render "shared/post_cards" %>
        <%= paginate @posts %>
      <% end %>
    <% else %>
      <div class="container text-center">
        <h1><%= t ".not_found_book" %></h1>
        <%= link_to t(".back"), root_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <%= render "shared/sidebar" %>
</div>
