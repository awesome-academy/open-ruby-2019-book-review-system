<% @book.posts.each do |post| %>
  <div class="row-md-4 mb-5">
    <div class="card h-100">
      <div class="card-body">
        <h2 class="card-title"><%= (post.title).html_safe  %></h2>
        <p class="card-text"><%= post.user_name %></p>
      </div>
      <div class="card-footer">
        <%= link_to t(".read_more"), post_path(post), class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
