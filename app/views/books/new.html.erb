<% provide :title, t(".title") %>
<div class="text-center border border-light p-5">
  <%= form_for @book, url: books_path do |f| %>
    <p class="h4 mb-4"><%= t ".title" %></p>
    <div class="row">
      <div class="row mb-4">
        <%= f.text_field :name, class: "form-control mb-2 col-7", placeholder: t(".name") %>
        <div class="col-4">
          <label><%= t ".category" %></label>
          <%= f.select(:id, Category.all.collect{|bc| [bc.name, bc.id]}, blank: t(".tag")) %>
        </div>
      </div>
      <%= f.text_field :author, class: "form-control mb-2", placeholder: t(".author") %>
      <label><%= t".picture" %></label>
      <%= f.file_field :image %>
      <%= f.submit t(".create_book"), class: "btn btn-info btn-block" %>
    </div>
  <% end %>
</div>
